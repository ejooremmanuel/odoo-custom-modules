<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <!--  User Group -->
        <record id="professional_service_contract_group_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="base.module_category_services_professional_service_contract"/>
            <!-- <field name="category_id" ref="base.module_category_services_contract_manager"/> -->
            <field name="implied_ids" eval="[(4,ref('base.group_user'))]"/>
        </record>

        <!--  Manager Group -->
        <record id="professional_service_contract_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="base.module_category_services_professional_service_contract"/>
            <field name="implied_ids" eval="[(4,ref('professional_service_contract_group_user'))]"/>
            <field name="users" eval="[(4,ref('base.user_root')),(4,ref('base.user_admin'))]"/>
        </record>

    </data>

    <data noupdate="1">

        <record id="professional_service_contract_user_rule" model="ir.rule">
            <field name="name">Professional Service Contract User Access</field>
            <field name="model_id" ref="model_professional_service_contract" />
            <field name="groups" eval="[(4,
            ref('professional_service_contract_group_user'))]" />
        </record>

    </data>



</odoo>
